@model APMKommune.Models.Segment


<!DOCTYPE html>
@*<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>*@
<div>

    <form id="myForm">
        @Html.HiddenFor(s => s.SegmentId)

        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Etatnavn" })
        <br />
        <a href="#" id="btnSubmit" class="btn btn-success ">
            @if (Model != null && Model.SegmentId > 0)
            { <span> Oppdater</span>}
            else
            {<span> Lagre</span> }

        </a>




    </form>




    <div style="text-align:center;display:none" id="loaderDiv">



        <!--SlowLoader gif-->



        <i class="fa fa-spinner" aria-hidden="true"></i>



    </div>








</div>
<script>
    $(document).ready(function () {

        $("#btnSubmit").click(function () {
            $("#loaderDiv").show();

            var data = $("#myForm").serialize();

            $.ajax({
                type: "POST",
                url: "/Segment/Create",
                data: data,
                success: function () {
                    $("#loaderDiv").hide();

                    $("#AddAndEdit").modal("hide");
                    window.location.href = "/Segment/Index";

                }

            })

        })
    })





</script>

